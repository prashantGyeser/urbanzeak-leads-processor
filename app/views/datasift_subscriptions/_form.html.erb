      <div class="col-md-6">
          <!--<input placeholder="Stream hash" class="form-control" type="text">-->
        <%= f.text_field :stream_hash, placeholder: "Stream hash", class: "form-control"  %>

      </div>
      <div class="col-md-6">
        <!--<input placeholder="Subscription name" class="form-control" type="text">-->
        <%= f.text_field :subscription_name, placeholder: "Subscription name", class: "form-control" %>
      </div>
