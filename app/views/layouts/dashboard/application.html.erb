<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<script type="text/javascript" charset="utf-8">

  $('.btn').click(function(e){
      e.preventDefault();
      selected_lead_id = $(this).attr('id');
      button_clicked = $(this);
      $.post("dashboard/leads/move_tweet_to_nonleads", { lead_id: selected_lead_id} )
              .done(function(data){
                  console.log("Done");
                  button_clicked.parent().parent().parent().parent().parent().parent().hide();
      })

  });
</script>

