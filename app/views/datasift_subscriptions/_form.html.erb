        <%= f.collection_select :category_id, Category.all, :id, :name, {:prompt => 'Select category'}, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.collection_select :city_id, City.all, :id, :city_name, {:prompt => 'Select city'}, class: "form-control" %>
      </div>
