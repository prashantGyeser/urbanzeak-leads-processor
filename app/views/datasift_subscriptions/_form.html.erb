<%= form_for(@datasift_subscription) do |f| %>

  <% if @datasift_subscription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@datasift_subscription.errors.count, "error") %> prohibited this datasift_subscription from being saved:</h2>

      <ul>
        <% @datasift_subscription.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <% if !notice.nil? %>
    <div class="alert alert-success">
      <button data-dismiss="alert" class="close"></button>
      Success: <%= notice %>
    </div>
  <% end %>

  <!--<div class="field">-->
    <%# f.label :datasift_subscription_id %><br>
